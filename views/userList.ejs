            <td class="items-center">
              <button class="btn btn-sm btn-error" onclick="deleteButton()"><i class="fa-solid fa-trash"></i></button>
            </td>
          </tr>
          <!-- row 3 -->
          <tr class="hover">
            <th>3</th>
            <td><b>Earlton Ladera</b></td>
            <td><b>earlton3321@gmail.com</b></td>
